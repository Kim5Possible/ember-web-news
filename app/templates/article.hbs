{{page-title "Article"}}

<section>
  <div class="pt-24">
    <LinkTo
      @route="news-list"
      class="text-teal-600 font-semibold text-lg hover:underline flex items-center"
    >

      Back

    </LinkTo>
  </div>
  <div
    class="relative flex flex-col md:flex-row w-full my-4 bg-white shadow-sm border border-slate-200 rounded-lg"
  >

    <div class="relative p-2.5 md:w-2/5 shrink-0 overflow-hidden">
      <img
        src="{{@model.urlToImage}}"
        alt="card-image"
        class="h-full w-full rounded-md md:rounded-lg object-cover"
      />
    </div>
    <div class="p-6">

      <div
        class="mb-4 rounded-full bg-teal-600 py-0.5 px-2.5 border border-transparent text-xs text-white transition-all shadow-sm w-20 text-center"
      >News</div>
      <h4 class="mb-2 text-slate-800 text-xl font-semibold">
        {{@model.title}}
      </h4>
      <p class="mb-8 text-slate-600 leading-normal font-light">
        {{@model.description}}
      </p>
      <p>{{divider @model.content}}</p>

    </div>
  </div>
</section>