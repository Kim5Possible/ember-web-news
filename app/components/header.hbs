{{yield}}

<header class="fixed top-0 z-50 max-w-[1080px] w-full">

  <nav
    class="block py-2 px-2 bg-white dark:bg-gray-900 shadow-xl rounded-md lg:px-8 lg:py-3 mt-5"
  >
    <div
      class="container flex flex-wrap items-center justify-between mx-auto text-slate-800"
    >
      <div class="flex items-center">
        <a
          href="/"
          class="uppercase mr-4 block cursor-pointer py-1.5 text-base text-slate-800 dark:text-slate-100 font-semibold"
        >
          News updates
        </a>
        <div
          class="bg-white dark:bg-gray-900 rounded-full transition-all ease-in-out"
        >

          <div class="flex flex-row justify-between toggle">
            <label
              for="dark-toggle"
              {{on "click" this.toggleDarkMode}}
              class="flex items-center cursor-pointer"
            >
              <div class="relative">
                <input type="checkbox" name="dark-toggle" class="hidden" />
                <div
                  class="block border-[1px] dark:border-white border-gray-900 w-8 h-5 rounded-full"
                ></div>
                <div
                  class="absolute left-1 top-1 dark:right-1 dark:left-auto dark:bg-white bg-gray-800 w-3 h-3 rounded-full transition"
                ></div>
              </div>
            </label>
          </div>
        </div>
      </div>
      <div class="max-w-sm min-w-[200px] sm:min-w-[350px]">
        <div class="relative w-full">
          <input
            type="search"
            {{on "input" this.searchArticles}}
            class="w-full bg-transparent placeholder:text-slate-400 text-slate-700 dark:text-slate-100 text-sm border border-slate-200 rounded-md pl-3 pr-10 py-2 transition duration-300 ease focus:outline-none focus:border-slate-400 hover:border-slate-300 shadow-sm focus:shadow"
            placeholder="Find articles you need..."
          />
          <div class="absolute top-1/2 right-2 transform -translate-y-1/2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="w-4 h-4 mr-2 dark:text-slate-100"
            >
              <path
                fill-rule="evenodd"
                d="M10.5 3.75a6.75 6.75 0 1 0 0 13.5 6.75 6.75 0 0 0 0-13.5ZM2.25 10.5a8.25 8.25 0 1 1 14.59 5.28l4.69 4.69a.75.75 0 1 1-1.06 1.06l-4.69-4.69A8.25 8.25 0 0 1 2.25 10.5Z"
                clip-rule="evenodd"
              />
            </svg>

          </div>
        </div>
      </div>
    </div>
  </nav>

</header>